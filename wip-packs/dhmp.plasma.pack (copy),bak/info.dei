tags: plasma projectile

#requires <com.hiriwa.dhmp.dhmp.common>
#exported at 0.09
#include ded's
#defsPath = "defs"

########################
#Set up the model
########################
asset model.thing.misc12 {
#asset model.thing.plasma {
  path = "plasma.fbx"
  front <0, 0, 1>
  up <0, 1, 0>
#offset <0, 0, 0>
offset <0, 18, 0>
 alignment.yaw = view
 alignment.pitch = random


  #++++++++++++++++++++++++
  #set up the textures for the model
  #++++++++++++++++++++++++
  material {
    variant "material-light-cross" {
      mesh-light-cross {
        diffuseMap = "textures/light-cross.png"
        normalMap = "textures/noise3d_flamed.png"
        specularMap = "textures/light-cross.png"
      	emissiveMap = "textures/light-cross.png"
      }
    }
    variant "material-light-blue" {
      mesh-light-blue {
        diffuseMap = "textures/light-blue.png"
        normalMap = "textures/noise3d_flamed.png"
        specularMap = "textures/light-blue.png"
      	emissiveMap = "textures/light-blue.png"
      }
    }
    variant "material-outer" {
      mesh-outer {
        diffuseMap = "textures/outer.png"
        normalMap = "textures/noise3d_flame.png"
      	specularMap = "textures/noise3d_flame.png"
      	emissiveMap = "textures/outer.png"
      }
    }
    variant "material-light-lightning" {
      mesh-light-lightning {
        diffuseMap = "textures/light-lightning.png"
        normalMap = "textures/noise3d_flame.png"
        heightMap = ""
      	specularMap = "textures/light-lightning.png"
      	emissiveMap = "textures/light-lightning.png"
      }
    }
    variant "material-death" {
      mesh-death {
        diffuseMap = "textures/death.png"
        normalMap = "textures/death.png"
        heightMap = "textures/death.png"
      	specularMap = "textures/death.png"
      	emissiveMap = "textures/exploded.png"
      }
     }
  }

  #++++++++++++++++++++++++
  #set up the rendering of the skin
  #++++++++++++++++++++++++
  render {
  #furthest back first
    pass "render_light_blue" {
      shader = "model.skeletal.veirdo.fire"
      material = "material-light-blue"
      meshes <mesh-light-blue>
      enabled = true
      depthFunc = Always
      variable uAlphaMultiplier       { value = 2 }
      variable uAlphaPower            { value = 1 }
      variable uDiffuseMultiplier     { value <0, 1.5, 2> }
      variable uFresnelTranspPow      { value = 2 }
      variable uMainOffset            { value <0.63, 0.63> }
      variable uMainScaleUV           { value <1.75, 1.75> }
      variable uMainSpeedUV           { value <0, 0> }
      variable uNoiseMultiplier       { value = 0.002 }
      variable uNoiseScaleUV          { value <1, 1> }
      variable uNoiseSpeedUV          { value <1, 1> }
    }
    
    pass "render_light_lightning" {
      shader = "model.skeletal.veirdo.fire"
      material = "material-light-lightning"
      meshes <mesh-light-lightning>
      enabled = true
      depthFunc = Always
      variable uAlphaMultiplier       { value = 2 }
      variable uAlphaPower            { value = 1.2 }
      variable uDiffuseMultiplier     { value <1, 1, 1> }
      variable uFresnelTranspPow      { value = 2 }
      variable uMainOffset            { value <0, 0> }
      variable uMainScaleUV           { value <1, 1> }
      variable uMainSpeedUV           { value <0, 0> }
      variable uNoiseMultiplier       { value = 0.002 }
      variable uNoiseScaleUV          { value <1, 1> }
      variable uNoiseSpeedUV          { value <1, 1> }
    }

    pass "render_light_cross" {
      shader = "model.skeletal.veirdo.fire"
      material = "material-light-cross"
      meshes <mesh-light-cross>
      enabled = true
      depthFunc = Always
      variable uAlphaMultiplier       { value = 2 }
      variable uAlphaPower            { value = 1 }
      variable uDiffuseMultiplier     { value <1, 1, 1> }
      variable uFresnelTranspPow      { value = 2 }
      variable uMainOffset            { value <0, 0> }
      variable uMainScaleUV           { value <1, 1> }
      variable uMainSpeedUV           { value <0, 0> }
      variable uNoiseMultiplier       { value = 0.002 }
      variable uNoiseScaleUV          { value <1, 1> }
      variable uNoiseSpeedUV          { value <1, 1> }
    }
    pass "render_outer" {
      shader = "model.skeletal.veirdo.fire"
      material = "material-outer"
      meshes <mesh-outer>
      enabled = true
      depthFunc = Always
      variable uAlphaMultiplier       { value = 0.4 }
      variable uAlphaPower            { value = 2 }
      variable uDiffuseMultiplier     { value <2, 2, 2> }
      variable uFresnelTranspPow      { value = 0.6 }
      variable uMainOffset            { value <0, 0> }
      variable uMainScaleUV           { value <0, 0> }
      variable uMainSpeedUV           { value <0, 0> }
      variable uNoiseMultiplier       { value = 2 }
      variable uNoiseScaleUV          { value <2, 2> }
      variable uNoiseSpeedUV          { value <0, -2> }
    }
    pass "render_death" {
      shader = "model.skeletal.veirdo.generic"
      material = "material-death"
      meshes <mesh-death>
      enabled = false
      depthWrite = false
      variable uAlpha { value = 1 }
      variable uSpeedUV { value <0, 0> }
      variable uScaleUV { value <1, 1> }
      variable uEmission { value = 1 }
      variable uReflection     { value = 0.5 }
      variable uReflectionBlur { value = 0 }
      variable uSpecular       { value = 0.2 }
      variable uGlossiness     { value = 10 }
    }
  }

  #++++++++++++++++++++++++
  #setup the animations
  #++++++++++++++++++++++++
  animation {
   variable blight_cross_rotation{
      speed = 130
      #axis chaingun rotates around
      axis <0, -1, 0>
      angle = 1
      #bone that is affected by the rotation(child bones will also be affected of the chosen bone)
      node = "bone-light-cross"
    }
    variable clight_lightning_rotation{
      speed = 110
      #axis chaingun rotates around
      axis <0, -1, 0>
      angle = 1
      #bone that is affected by the rotation(child bones will also be affected of the chosen bone)
      node = "bone-light-lightning"
    }
    variable dlight_blue_rotation{
      speed = 90
      #axis chaingun rotates around
      axis <0, -1, 0>
      angle = 1
      #bone that is affected by the rotation(child bones will also be affected of the chosen bone)
      node = "bone-light-blue"
    }
    variable death_rotation{
      speed = 0
      #axis chaingun rotates around
      axis <0, 1, 0>
      angle = 60
      #bone that is affected by the rotation(child bones will also be affected of the chosen bone)
      node = "bone-death"
    }
    
    #-----------------
    #setup different timeline changes
    #-----------------
    timeline "timeline_spawn2" {
            script at 0 {
		clight_lightning_rotation.angle.setValue (60)
            }
    }
    timeline "timeline_spawn3" {
            script at 0 {
		clight_lightning_rotation.angle.setValue (170)
            }
    }
    timeline "timeline_death" {
        script at 0 {
	          #speed degrees per second
		  blight_cross_rotation.speed.setValue (0)
		  clight_lightning_rotation.speed.setValue (0)
		  dlight_blue_rotation.speed.setValue (0)
		  
		  render_light_blue.enabled = False
		  render_light_lightning.enabled = False
		  render_light_cross.enabled = False
		  render_outer.enabled = False

		  render_death.enabled = True
		  render_death.uEmission.setValueFrom ( 2, 0, 0.6 )
		  death_rotation.angle.setValue (170)
	}
	script at 0.3 {
		render_death.uAlpha.setValueFrom ( 1, 0, 0.4 )
	}
    }
    timeline "timeline_death2" {
        script at 0 {
	          #speed degrees per second
		  blight_cross_rotation.speed.setValue (0)
		  clight_lightning_rotation.speed.setValue (0)
		  dlight_blue_rotation.speed.setValue (0)
		  
		  render_light_blue.enabled = False
		  render_light_lightning.enabled = False
		  render_light_cross.enabled = False
		  render_outer.enabled = False

		  render_death.enabled = True
		  render_death.uEmission.setValueFrom ( 2, 0, 0.6 )
		  death_rotation.angle.setValue (40)
	}
	script at 0.3 {
		render_death.uAlpha.setValueFrom ( 1, 0, 0.4 )
	}
    }
    #-----------------
    #setup the states(e.g. attacking, dying, walking)
    #-----------------
    state PLASBALL {
      sequence arm|wait {
  	prob = 0.5
      }
      sequence arm|wait {
        #alwaysTrigger = true
        #mustFinish = true
  	prob = 0.5
  	#duration = 2.4
  	#looping = true
  	timeline = timeline_spawn2
      }
      sequence arm|wait {
        #alwaysTrigger = true
        #mustFinish = true
  	prob = 1
  	#duration = 2.4
  	#looping = true
  	timeline = timeline_spawn3
      }
     }
     state SOUL {
          #state PLASEXP {
       sequence arm|death {
         alwaysTrigger = true
         mustFinish = true
         prob = 0.5
         duration = 1
         #timeline = timeline_death
        }
        sequence arm|death {
         alwaysTrigger = true
         mustFinish = true
         prob = 1
         duration = 1
         #timeline = timeline_death2
        }
      }
  }
}
