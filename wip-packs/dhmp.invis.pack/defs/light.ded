* State { ID = "YSKULL4"; Next state = "YSKULL5"; }
* State { ID = "YSKULL5"; Next state = "YSKULL6"; }
* State { ID = "YSKULL6"; Next state = "YSKULL7"; }
* State { ID = "YSKULL7"; Next state = "YSKULL8"; }
* State { ID = "YSKULL8"; Next state = "YSKULL"; }

#attach the lights to the states
Light { State = "YSKULL";  Size = 0; Color { 0.50 0.50 0.00 }; }
Light { State = "YSKULL2"; Size = 0; Color { 1.00 1.00 0.70 }; }
Light { State = "YSKULL3"; Size = 0; Color { 0.80 0.80 0.60 }; }
Light { State = "YSKULL4"; Size = 0; Color { 0.65 0.65 0.50 }; }
Light { State = "YSKULL5"; Size = 0; Color { 0.50 0.50 0.40 }; }
Light { State = "YSKULL6"; Size = 0; Color { 0.35 0.35 0.30 }; }
Light { State = "YSKULL7"; Size = 0; Color { 0.20 0.20 0.20 }; }
Light { State = "YSKULL8"; Size = 0; Color { 0.05 0.05 0.10 }; }


